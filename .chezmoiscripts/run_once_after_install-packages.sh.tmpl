#!/bin/bash

#######################################
# install distro-specific packages
#######################################

{{ if eq .osid "linux-ubuntu" }}
    sudo apt install zsh
    sudo apt install neovim
{{ else if eq .osid "linux-fedora" }}
    sudo dnf install zsh
    sudo dnf install neovim
{{ end }}


#######################################
# other
#######################################

# change default shell to zsh
chsh -s $(which zsh)

# oh-my-zsh
sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

# vim-plug
sh -c 'curl -fLo "${XDG_DATA_HOME:-$HOME/.local/share}"/nvim/site/autoload/plug.vim --create-dirs \
       https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'

# zsh plugins
DIR="$HOME/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting"
if [ ! -d "$DIR" ]; then
    git clone https://github.com/zsh-users/zsh-syntax-highlighting.git $DIR
fi

DIR="$HOME/.oh-my-zsh/custom/plugins/zsh-autosuggestions"
if [ ! -d "$DIR" ]; then
    git clone https://github.com/zsh-users/zsh-autosuggestions $DIR
fi
 
